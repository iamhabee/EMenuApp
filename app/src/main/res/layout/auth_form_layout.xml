<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_edittext"
    tools:ignore="UselessParent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.arke.sdk.ui.views.EMenuEditText
        android:id="@+id/auth_form_box"
        style="@style/Widget.EditText.Form.Auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingEnd="32dp"
        android:paddingRight="32dp"
        app:textStyle="regular"
        tools:ignore="RtlSymmetry" />

    <ToggleButton
        android:id="@+id/toggle_sign_up_password_visibility"
        android:layout_width="@dimen/btn_size_show_pwd"
        android:layout_height="@dimen/btn_size_show_pwd"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/margin_imageview"
        android:background="@drawable/toggle_pwd_visibility"
        android:button="@null"
        android:checked="false"
        android:textOff=""
        android:textOn="" />

</FrameLayout>
