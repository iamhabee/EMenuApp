<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/preloader"
        android:layout_width="@dimen/lottie_view_width"
        android:layout_height="@dimen/lottie_view_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="51-preloader.json"
        app:lottie_loop="true" />

    <com.arke.sdk.ui.views.EMenuTextView
        android:id="@+id/loader_progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lottie_view_companion_margin_top"
        android:padding="10dp"
        android:text="@string/loading" />

</RelativeLayout>